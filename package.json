{
  "name": "express-typescript-starter",
  "license": "MIT",
  "scripts": {
    "build": " yarn run build-assets && yarn run build-ts",
    "start": "node ./dist/server.js",
    "test": "jest --forceExit --coverage",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "build-assets": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "development-assets": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch-assets": "yarn run development-assets -- --watch"

  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "async": "^3.2.0",
    "bcrypt": "^4.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "express-validator": "^6.4.1",
    "lodash": "^4.17.15",
    "lusca": "^1.6.1",
    "mongoose": "^5.9.11",
    "nodemailer": "^6.4.6",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pug": "^2.0.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/async": "^3.2.1",
    "@types/bcrypt": "^3.0.0",
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/bluebird": "^3.5.30",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.11",
    "@types/compression": "^1.7.0",
    "@types/concurrently": "^5.2.0",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/express-flash": "0.0.2",
    "@types/express-session": "^1.17.0",
    "@types/hapi__joi": "^16.0.12",
