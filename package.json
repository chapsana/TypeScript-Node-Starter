{
  "name": "express-typescript-starter",
  "license": "MIT",
  "scripts": {
    "build": "yarn run build-sass && yarn run build-ts && yarn run copy-static-assets",
    "start": "node ./dist/server.js",
    "watch-node": "nodemon ./dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-sass\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-sass\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "async": "^3.2.0",
    "bcrypt": "^4.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "express-validator": "^6.4.1",
    "lodash": "^4.17.15",
    "lusca": "^1.6.1",
    "mongoose": "^5.9.11",
    "nodemailer": "^6.4.6",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pug": "^2.0.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/async": "^3.2.1",
    "@types/bcrypt": "^3.0.0",
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/bluebird": "^3.5.30",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.11",
    "@types/compression": "^1.7.0",
    "@types/concurrently": "^5.2.0",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/express-flash": "0.0.2",
    "@types/express-session": "^1.17.0",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "^25.2.1",
    "@types/jquery": "^3.3.37",
    "@types/lodash": "^4.14.150",
    "@types/lusca": "^1.6.1",
    "@types/mongoose": "^5.7.14",
    "@types/node": "^13.13.4",
    "@types/node-sass": "^4.11.0",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/pug": "^2.0.4",
    "@types/request": "^2.48.4",
    "@types/request-promise": "^4.1.46",
    "@types/shelljs": "^0.8.7",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "jest": "^25.5.4",
    "node-sass": "^4.14.0",
    "nodemon": "^2.0.3",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
