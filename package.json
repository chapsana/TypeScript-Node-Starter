    "@types/lusca": "^1.6.1",
    "@types/mongoose": "^5.7.14",
    "@types/node": "^13.13.4",
    "@types/node-sass": "^4.11.0",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/pug": "^2.0.4",
    "@types/request": "^2.48.4",
